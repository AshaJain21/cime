set(SCC "cc")
set(SCXX "CC")
set(SFC "ftn")
execute_process(COMMAND ${NETCDF_PATH}/bin/nf-config --includedir OUTPUT_VARIABLE SHELL_CMD_OUTPUT_BUILD_INTERNAL_IGNORE0 OUTPUT_STRIP_TRAILING_WHITESPACE)
set(NetCDF_C_LIBRARY ${NETCDF_PATH}/lib)
set(NetCDF_C_INCLUDE_DIR  ${SHELL_CMD_OUTPUT_BUILD_INTERNAL_IGNORE0})
string(APPEND CMAKE_OPTS " -DNetCDF_C_LIBRARY=${NetCDF_C_LIBRARY} -DNetCDF_C_INCLUDE_DIR=${NetCDF_C_INCLUDE_DIR}  -DNetCDF_Fortran_LIBRARY=${NetCDF_C_LIBRARY} -DNetCDF_Fortran_INCLUDE_DIR=${NetCDF_C_INCLUDE_DIR}")